<h3 class='text-2xl font-semibold'>Welcome, {{name}}</h3>

<h4 class='mt-4 text-xl font-semibold'>Students</h4>

<form
  class='mb-6 flex items-end gap-6'
  hx-post='conditional/student'
  hx-target='#students-list'
  hx-on::after-request='this.reset()'
>
  <div class='flex flex-col gap-1'>
    <label for='student-name-input' class='text-sm font-semibold'>Student Name</label>
    <input
      required
      type='text'
      name='name'
      id='student-name-input'
      class='w-25 h-12 rounded border border-slate-700 px-4 invalid:border-red-300'
    />
  </div>
  <div class='flex flex-col gap-1'>
    <label for='student-email-input' class='text-sm font-semibold'>Student email</label>
    <input
      required
      type='email'
      name='email'
      id='student-email-input'
      class='w-25 h-12 rounded border border-slate-700 px-4 invalid:border-red-300'
    />
  </div>
  <button
    type='submit'
    class='h-12 rounded border border-blue-500 bg-blue-500 px-6 text-slate-50 hover:bg-blue-300 active:bg-blue-700'
  >Add Student</button>
</form>

<section
  id='students-list'
  hx-swap='innerHtml'
  hx-get='conditional/student'
  hx-trigger='load'
>

</section>
